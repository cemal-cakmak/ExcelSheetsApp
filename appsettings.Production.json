{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/ExcelSheetsApp.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableRealMetrics": true,
  "SystemSettings": {
    "MaxFileSize": "25MB",
    "AllowedFileTypes": [".xlsx", ".xls"],
    "SessionTimeout": 30,
    "MaxConcurrentUsers": 50
  },
  "Security": {
    "RequireHttps": false,
    "SecureCookies": false
  },
  "Railway": {
    "DatabasePath": "/app/data",
    "UploadsPath": "/app/wwwroot/uploads"
  }
}
