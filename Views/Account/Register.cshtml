@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="auth-header">
        <div class="icon">
            <i class="fas fa-user-plus"></i>
        </div>
        <h2>Hesap Oluştur</h2>
        <p class="mb-0" style="opacity: 0.9;">Excel Otomasyona Katılın</p>
    </div>
    
    <div class="auth-body">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            
            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="floatingUsername" placeholder="Kullanıcı Adı" />
                <label for="floatingUsername"><i class="fas fa-user me-2"></i>Kullanıcı Adı</label>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="E-posta" />
                <label for="floatingEmail"><i class="fas fa-envelope me-2"></i>E-posta</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating">
                <input asp-for="FullName" class="form-control" id="floatingFullName" placeholder="Ad Soyad" />
                <label for="floatingFullName"><i class="fas fa-id-card me-2"></i>Ad Soyad</label>
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Şifre" />
                <label for="floatingPassword"><i class="fas fa-lock me-2"></i>Şifre</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" id="floatingConfirmPassword" placeholder="Şifre Tekrar" />
                <label for="floatingConfirmPassword"><i class="fas fa-check-circle me-2"></i>Şifre Tekrar</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-auth">
                <i class="fas fa-user-plus me-2"></i>Hesap Oluştur
            </button>
        </form>
    </div>
    
    <div class="auth-footer">
        <p class="mb-0">
            Zaten hesabınız var mı? 
            <a asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
            </a>
        </p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
