<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excel Otomasyon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .navbar-modern {
            background: linear-gradient(135deg, #4a90e2 0%, #7b68ee 100%) !important;
            border: none !important;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15) !important;
            padding: 15px 0;
            margin-bottom: 30px !important;
        }
        
        .navbar-brand-modern {
            font-size: 1.8rem;
            font-weight: bold;
            color: white !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
        }
        
        .navbar-brand-modern:hover {
            color: #f8f9fa !important;
            transform: scale(1.05);
        }
        
        .navbar-brand-icon {
            width: 40px;
            height: 40px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }
        
        .nav-link-modern {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            padding: 10px 15px !important;
            border-radius: 25px;
            transition: all 0.3s ease;
            margin: 0 5px;
        }
        
        .nav-link-modern:hover {
            color: white !important;
            background: rgba(255,255,255,0.15);
            transform: translateY(-2px);
        }
        
        .nav-link-modern.active {
            background: rgba(255,255,255,0.2);
            color: white !important;
        }
        
        .user-info {
            background: rgba(255,255,255,0.15);
            border-radius: 25px;
            padding: 8px 15px;
            color: white !important;
            margin-right: 10px;
        }
        
        .btn-logout {
            background: rgba(220,53,69,0.2);
            border: 1px solid rgba(220,53,69,0.3);
            color: white !important;
            border-radius: 20px;
            padding: 8px 15px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-logout:hover {
            background: #dc3545;
            border-color: #dc3545;
            color: white !important;
            transform: translateY(-1px);
        }
        
        .navbar-toggler-modern {
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 8px;
            padding: 8px 12px;
        }
        
        .navbar-toggler-modern:focus {
            box-shadow: 0 0 0 0.2rem rgba(255,255,255,0.25);
        }
        
        .navbar-toggler-icon-modern {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%2833, 37, 41, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            filter: invert(1);
        }
        
        .container-modern {
            max-width: 1400px;
        }
        
        @@media (max-width: 768px) {
            .navbar-brand-modern {
                font-size: 1.5rem;
            }
            
            .navbar-brand-icon {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-modern">
            <div class="container-fluid container-modern">
                <a class="navbar-brand navbar-brand-modern" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="navbar-brand-icon">
                        <i class="fas fa-file-excel"></i>
                    </div>
                    <span>Excel Otomasyon</span>
                </a>
                
                <button class="navbar-toggler navbar-toggler-modern" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-toggler-icon-modern"></span>
                </button>
                
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Ana Sayfa
                            </a>
                        </li>
                        @if (User.Identity!.IsAuthenticated && User.Identity!.Name?.ToLower() == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-modern" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-cogs me-2"></i>Admin Panel
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="user-info">
                                    <i class="fas fa-user me-2"></i>@User.Identity.Name
                                </span>
                                <form asp-action="Logout" asp-controller="Account" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-modern" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Giriş
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Excel Otomasyon
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
